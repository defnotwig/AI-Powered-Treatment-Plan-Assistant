# ──────────────────────────────────────
# AI-Powered Treatment Plan Assistant
# Backend Environment Configuration
# ──────────────────────────────────────

# Server
PORT=5000
NODE_ENV=development

# Database (PostgreSQL in production, SQLite in demo mode)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=treatment_plan_db
DB_USER=postgres
DB_PASSWORD=your_password_here
DB_DIALECT=postgres
# DB_STORAGE=./data/aptp.sqlite  # uncomment for SQLite

# Demo Mode (uses in-memory data, no real DB needed)
DEMO_MODE=true

# OpenAI API
OPENAI_API_KEY=sk-your-key-here

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=24h

# CORS
CORS_ORIGIN=http://localhost:5173

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=debug
